<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Terra Sales - Gest√£o de Pesquisas</title>
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- React & ReactDOM -->
    <script src="https://unpkg.com/react@18/umd/react.development.js"></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.development.js"></script>
    <!-- Babel para JSX -->
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
    <!-- Lucide Icons -->
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap');
        body { font-family: 'Inter', sans-serif; }
        .animate-fade-in { animation: fadeIn 0.3s ease-out; }
        @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }

        /* Estilos espec√≠ficos para Impress√£o/PDF */
        @media print {
            .no-print { display: none !important; }
            body { background-color: white !important; }
            main { padding: 0 !important; margin: 0 !important; max-width: 100% !important; }
            .bg-white { border: 1px solid #e2e8f0 !important; border-radius: 0 !important; }
            .shadow-sm, .shadow-lg { shadow: none !important; box-shadow: none !important; }
            .grid { display: grid !important; }
            
            /* Ajuste para que a tabela ocupe a p√°gina inteira no PDF */
            .print-full-width { width: 100% !important; border: none !important; }
            
            /* Cabe√ßalho exclusivo para o PDF */
            .print-only-header { 
                display: block !important; 
                margin-bottom: 20px; 
                padding-bottom: 10px; 
                border-bottom: 2px solid #ea580c;
            }
        }
        .print-only-header { display: none; }
    </style>
</head>
<body class="bg-slate-50">
    <div id="root"></div>

    <script type="text/babel" data-type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getAuth, signInAnonymously, signInWithCustomToken, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        import { getFirestore, doc, setDoc, deleteDoc, collection, onSnapshot, query, addDoc, updateDoc } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";

        const { useState, useMemo, useEffect } = React;

        // --- Configura√ß√£o Firebase ---
        const firebaseConfig = typeof __firebase_config !== 'undefined' 
            ? JSON.parse(__firebase_config) 
            : {
                apiKey: "AIzaSyDB2NUtkx2Yw2ZjT7TWpaEQBhZSM8eSGiE",
                authDomain: "terra-insights-607a5.firebaseapp.com",
                projectId: "terra-insights-607a5",
                storageBucket: "terra-insights-607a5.firebasestorage.app",
                messagingSenderId: "78975834698",
                appId: "1:78975834698:web:e253b076dcdd75dcb2e4b3"
            };

        // --- Inicializa√ß√£o ---
        const app = initializeApp(firebaseConfig);
        const auth = getAuth(app);
        const db = getFirestore(app);
        const appId = typeof __app_id !== 'undefined' ? __app_id : 'terra-sales-app';

        // --- Componente de √çcone ---
        const Icon = ({ name, size = 18, className = "" }) => {
            useEffect(() => {
                if (window.lucide) {
                    window.lucide.createIcons();
                }
            }, [name]);
            return <i data-lucide={name} style={{ width: size, height: size }} className={className}></i>;
        };

        const App = () => {
            const [user, setUser] = useState(null);
            const [currentView, setCurrentView] = useState('dashboard');
            const [activeFlowTab, setActiveFlowTab] = useState('Sazonal');
            const [searchTerm, setSearchTerm] = useState('');
            const [filterFluxo, setFilterFluxo] = useState('Todos');
            const [filterStatus, setFilterStatus] = useState('Todos');

            // --- Estados do Banco de Dados ---
            const [allFlows, setAllFlows] = useState({ 'Sazonal': [], 'On-demand': [], 'Sonora Trends': [] });
            const [researches, setResearches] = useState([]);

            // --- Modal Workflow State ---
            const [isModalOpen, setIsModalOpen] = useState(false);
            const [editingStep, setEditingStep] = useState(null);
            const [formData, setFormData] = useState({ title: '', description: '', detail: '', icon: 'clipboard-list' });

            // --- Modal Research State ---
            const [isResearchModalOpen, setIsResearchModalOpen] = useState(false);
            const [editingResearchId, setEditingResearchId] = useState(null);
            const [researchFormData, setResearchFormData] = useState({
                nome: '',
                solicitante: '',
                dataInicio: '',
                dataFim: '',
                status: 'Na Fila',
                respondentesEsperados: 0,
                respondentesAtuais: 0,
                fluxo: 'Sazonal'
            });

            // 1. Inicializa√ß√£o da Autentica√ß√£o
            useEffect(() => {
                const initAuth = async () => {
                    try {
                        if (typeof __initial_auth_token !== 'undefined' && __initial_auth_token) {
                            await signInWithCustomToken(auth, __initial_auth_token);
                        } else {
                            await signInAnonymously(auth);
                        }
                    } catch (error) {
                        console.error("Erro na autentica√ß√£o:", error);
                    }
                };
                initAuth();
                const unsubscribe = onAuthStateChanged(auth, setUser);
                return () => unsubscribe();
            }, []);

            // 2. Fetch de Dados
            useEffect(() => {
                if (!user) return;

                const flowsDocRef = doc(db, 'artifacts', appId, 'public', 'data', 'settings', 'workflow');
                const unsubFlows = onSnapshot(flowsDocRef, (docSnap) => {
                    if (docSnap.exists()) {
                        setAllFlows(docSnap.data());
                    } else {
                        const initialFlows = {
                            'Sazonal': [
                                { id: 's1', step: 1, title: 'Receber Briefing', description: 'Coleta inicial de requisitos e objetivos.', icon: 'clipboard-list', detail: 'Focar nos KPIs sazonais.' },
                                { id: 's2', step: 2, title: 'Cria√ß√£o da pesquisa', description: 'Desenvolvimento do question√°rio.', icon: 'file-edit', detail: 'Usar templates padr√£o.' }
                            ],
                            'On-demand': [
                                { id: 'o1', step: 1, title: 'Receber Briefing', description: 'Coleta de requisitos espec√≠ficos do cliente.', icon: 'zap', detail: 'Atendimento √°gil.' }
                            ],
                            'Sonora Trends': [
                                { id: 't1', step: 1, title: 'Curadoria Musical', description: 'Sele√ß√£o de temas em alta.', icon: 'music', detail: 'Verificar tend√™ncias globais.' }
                            ]
                        };
                        setDoc(flowsDocRef, initialFlows);
                    }
                }, (error) => console.error("Erro ao carregar fluxos:", error));

                const researchesColl = collection(db, 'artifacts', appId, 'public', 'data', 'researches');
                const unsubResearches = onSnapshot(researchesColl, (snapshot) => {
                    const data = snapshot.docs.map(doc => ({ id: doc.id, ...doc.data() }));
                    setResearches(data);
                }, (error) => console.error("Erro ao carregar pesquisas:", error));

                return () => { unsubFlows(); unsubResearches(); };
            }, [user]);

            // --- A√á√ïES ---
            const handleExportPDF = () => {
                window.print();
            };

            // --- CRUD ACTIONS PARA PESQUISAS ---
            const handleOpenResearchModal = (research = null) => {
                if (research) {
                    setEditingResearchId(research.id);
                    setResearchFormData({
                        nome: research.nome || '',
                        solicitante: research.solicitante || '',
                        dataInicio: research.dataInicio || '',
                        dataFim: research.dataFim || '',
                        status: research.status || 'Na Fila',
                        respondentesEsperados: research.respondentesEsperados || 0,
                        respondentesAtuais: research.respondentesAtuais || 0,
                        fluxo: research.fluxo || 'Sazonal'
                    });
                } else {
                    setEditingResearchId(null);
                    setResearchFormData({
                        nome: '',
                        solicitante: '',
                        dataInicio: '',
                        dataFim: '',
                        status: 'Na Fila',
                        respondentesEsperados: 0,
                        respondentesAtuais: 0,
                        fluxo: 'Sazonal'
                    });
                }
                setIsResearchModalOpen(true);
            };

            const handleSaveResearch = async () => {
                if (!user) return;
                try {
                    const data = {
                        ...researchFormData,
                        respondentesEsperados: Number(researchFormData.respondentesEsperados),
                        respondentesAtuais: Number(researchFormData.respondentesAtuais),
                        updatedAt: new Date().toISOString()
                    };

                    if (editingResearchId) {
                        const researchRef = doc(db, 'artifacts', appId, 'public', 'data', 'researches', editingResearchId);
                        await updateDoc(researchRef, data);
                    } else {
                        const researchesColl = collection(db, 'artifacts', appId, 'public', 'data', 'researches');
                        await addDoc(researchesColl, { ...data, createdAt: new Date().toISOString() });
                    }

                    setIsResearchModalOpen(false);
                } catch (error) {
                    console.error("Erro ao salvar pesquisa:", error);
                }
            };

            const handleDeleteResearch = async (id) => {
                if (!user) return;
                try {
                    await deleteDoc(doc(db, 'artifacts', appId, 'public', 'data', 'researches', id));
                } catch (error) {
                    console.error("Erro ao excluir pesquisa:", error);
                }
            };

            // --- CRUD ACTIONS PARA WORKFLOW ---
            const handleOpenModal = (step = null) => {
                if (step) {
                    setEditingStep(step);
                    setFormData({ title: step.title, description: step.description, detail: step.detail, icon: step.icon });
                } else {
                    setEditingStep(null);
                    setFormData({ title: '', description: '', detail: '', icon: 'clipboard-list' });
                }
                setIsModalOpen(true);
            };

            const handleSaveStep = async () => {
                if (!user) return;
                const currentFlowSteps = [...(allFlows[activeFlowTab] || [])];
                let updatedList;

                if (editingStep) {
                    updatedList = currentFlowSteps.map(s => s.id === editingStep.id ? { ...s, ...formData } : s);
                } else {
                    const newStep = { id: Date.now().toString(), step: currentFlowSteps.length + 1, ...formData };
                    updatedList = [...currentFlowSteps, newStep];
                }

                const updatedAllFlows = { ...allFlows, [activeFlowTab]: updatedList };
                await setDoc(doc(db, 'artifacts', appId, 'public', 'data', 'settings', 'workflow'), updatedAllFlows);
                setIsModalOpen(false);
            };

            const handleDeleteStep = async (id) => {
                if (!user) return;
                const updatedList = (allFlows[activeFlowTab] || [])
                    .filter(s => s.id !== id)
                    .map((s, idx) => ({ ...s, step: idx + 1 }));
                
                const updatedAllFlows = { ...allFlows, [activeFlowTab]: updatedList };
                await setDoc(doc(db, 'artifacts', appId, 'public', 'data', 'settings', 'workflow'), updatedAllFlows);
            };

            const filteredResearches = useMemo(() => {
                return researches.filter(r => {
                    const matchesSearch = r.nome?.toLowerCase().includes(searchTerm.toLowerCase());
                    const matchesFluxo = filterFluxo === 'Todos' || r.fluxo === filterFluxo;
                    const matchesStatus = filterStatus === 'Todos' || r.status === filterStatus;
                    return matchesSearch && matchesFluxo && matchesStatus;
                });
            }, [researches, searchTerm, filterFluxo, filterStatus]);

            const stats = {
                total: researches.length,
                noAr: researches.filter(r => r.status === 'No Ar').length,
                naFila: researches.filter(r => r.status === 'Na Fila').length
            };

            const getStatusStyle = (status) => {
                switch (status) {
                    case 'No Ar': return 'bg-emerald-100 text-emerald-700 border-emerald-200';
                    case 'Na Fila': return 'bg-amber-100 text-amber-700 border-amber-200';
                    case 'Finalizada': return 'bg-slate-100 text-slate-700 border-slate-200';
                    default: return 'bg-gray-100 text-gray-700';
                }
            };

            const getFluxoColor = (fluxo) => {
                switch (fluxo) {
                    case 'Sazonal': return 'text-orange-600 bg-orange-50';
                    case 'On-demand': return 'text-blue-600 bg-blue-50';
                    case 'Sonora Trends': return 'text-purple-600 bg-purple-50';
                    default: return 'text-gray-600 bg-gray-50';
                }
            };

            if (!user) return (
                <div className="flex items-center justify-center min-h-screen">
                    <div className="text-center">
                        <div className="w-12 h-12 border-4 border-orange-600 border-t-transparent rounded-full animate-spin mx-auto mb-4"></div>
                        <p className="text-slate-500 font-bold uppercase tracking-widest text-xs">Conectando ao Terra Insights...</p>
                    </div>
                </div>
            );

            return (
                <div className="min-h-screen pb-12">
                    {/* Header: Hide in Print entirely if preferred, or keep logo */}
                    <header className="bg-white border-b border-slate-200 sticky top-0 z-30 shadow-sm no-print">
                        <div className="max-w-7xl mx-auto px-4 h-16 flex items-center justify-between">
                            <div className="flex items-center gap-6">
                                <div className="flex items-center gap-2">
                                    <div className="w-8 h-8 bg-orange-600 rounded-lg flex items-center justify-center">
                                        <Icon name="bar-chart-3" className="text-white" />
                                    </div>
                                    <h1 className="text-xl font-black text-slate-800 tracking-tighter uppercase">Terra <span className="text-orange-600">Sales</span></h1>
                                </div>
                                <nav className="hidden md:flex gap-1">
                                    <button onClick={() => setCurrentView('dashboard')} className={`px-4 py-2 text-sm font-bold rounded-lg transition-colors ${currentView === 'dashboard' ? 'bg-orange-50 text-orange-600' : 'text-slate-500 hover:bg-slate-50'}`}>Dashboard</button>
                                    <button onClick={() => setCurrentView('workflow')} className={`px-4 py-2 text-sm font-bold rounded-lg transition-colors ${currentView === 'workflow' ? 'bg-orange-50 text-orange-600' : 'text-slate-500 hover:bg-slate-50'}`}>Fluxos Operacionais</button>
                                </nav>
                            </div>
                            <div className="flex items-center gap-4">
                                <button 
                                    onClick={handleExportPDF}
                                    className="px-4 py-2 text-slate-600 hover:bg-slate-100 rounded-lg text-sm font-bold border border-slate-200 transition-all flex items-center gap-2"
                                >
                                    <Icon name="file-text" size={16} /> Exportar PDF
                                </button>
                                <button 
                                    onClick={() => handleOpenResearchModal()}
                                    className="bg-orange-600 text-white px-4 py-2 rounded-lg text-sm font-bold shadow-lg hover:bg-orange-700 transition-all flex items-center gap-2 active:scale-95"
                                >
                                    <Icon name="plus" size={16} /> Nova Pesquisa
                                </button>
                            </div>
                        </div>
                    </header>

                    <main className="max-w-7xl mx-auto px-4 py-8">
                        {/* Print Only Header */}
                        <div className="print-only-header">
                            <div className="flex items-center justify-between">
                                <div className="flex items-center gap-2">
                                    <div className="w-8 h-8 bg-orange-600 rounded-lg flex items-center justify-center">
                                        <Icon name="bar-chart-3" className="text-white" />
                                    </div>
                                    <h1 className="text-xl font-black text-slate-800 uppercase">Terra <span className="text-orange-600">Sales</span></h1>
                                </div>
                                <div className="text-right">
                                    <p className="text-xs font-bold text-slate-400">RELAT√ìRIO DE PESQUISAS</p>
                                    <p className="text-[10px] text-slate-500">{new Date().toLocaleDateString('pt-BR')} √†s {new Date().toLocaleTimeString('pt-BR')}</p>
                                </div>
                            </div>
                        </div>

                        {currentView === 'dashboard' ? (
                            <div className="animate-fade-in">
                                <div className="flex justify-between items-center mb-6 no-print">
                                    <h2 className="text-2xl font-black text-slate-800 tracking-tight">Status Geral das Pesquisas</h2>
                                    <div className="hidden md:flex gap-2">
                                        <button onClick={handleExportPDF} className="text-xs font-bold text-slate-500 hover:text-orange-600 flex items-center gap-1">
                                            <Icon name="printer" size={14} /> Gerar PDF da Tabela
                                        </button>
                                    </div>
                                </div>

                                {/* KPIs - HIDE IN PDF */}
                                <div className="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8 no-print">
                                    <div className="bg-white p-6 rounded-2xl border border-slate-200 shadow-sm">
                                        <p className="text-xs font-bold text-slate-400 uppercase tracking-widest mb-1">Total de Pesquisas</p>
                                        <p className="text-3xl font-black text-slate-800">{stats.total}</p>
                                    </div>
                                    <div className="bg-white p-6 rounded-2xl border-l-4 border-l-emerald-500 border border-slate-200 shadow-sm">
                                        <p className="text-xs font-bold text-slate-400 uppercase tracking-widest mb-1">Coletando (No Ar)</p>
                                        <p className="text-3xl font-black text-emerald-600">{stats.noAr}</p>
                                    </div>
                                    <div className="bg-white p-6 rounded-2xl border-l-4 border-l-amber-500 border border-slate-200 shadow-sm">
                                        <p className="text-xs font-bold text-slate-400 uppercase tracking-widest mb-1">Em Prepara√ß√£o</p>
                                        <p className="text-3xl font-black text-amber-600">{stats.naFila}</p>
                                    </div>
                                </div>

                                {/* Filters - HIDE IN PDF */}
                                <div className="space-y-4 mb-6 no-print">
                                    <div className="flex flex-col lg:flex-row gap-4 items-center justify-between">
                                        <div className="relative w-full lg:w-80">
                                            <input type="text" placeholder="Buscar por nome..." className="w-full pl-10 pr-4 py-2 rounded-xl border border-slate-200 outline-none focus:ring-2 focus:ring-orange-500 font-medium" value={searchTerm} onChange={e => setSearchTerm(e.target.value)} />
                                            <Icon name="search" className="absolute left-3 top-2.5 text-slate-400" size={16} />
                                        </div>
                                        <div className="flex gap-4 items-center overflow-x-auto pb-2 lg:pb-0 w-full lg:w-auto">
                                            <div className="flex gap-1 bg-slate-200 p-1 rounded-xl whitespace-nowrap">
                                                <span className="px-2 text-[10px] font-black uppercase text-slate-400 flex items-center">Fluxo:</span>
                                                {['Todos', 'Sazonal', 'On-demand', 'Sonora Trends'].map(f => (
                                                    <button key={f} onClick={() => setFilterFluxo(f)} className={`px-4 py-1.5 rounded-lg text-xs font-bold transition-all ${filterFluxo === f ? 'bg-white text-slate-800 shadow-sm' : 'text-slate-500 hover:text-slate-700'}`}>{f}</button>
                                                ))}
                                            </div>
                                            <div className="flex gap-1 bg-slate-200 p-1 rounded-xl whitespace-nowrap">
                                                <span className="px-2 text-[10px] font-black uppercase text-slate-400 flex items-center">Status:</span>
                                                {['Todos', 'Na Fila', 'No Ar', 'Finalizada'].map(s => (
                                                    <button key={s} onClick={() => setFilterStatus(s)} className={`px-4 py-1.5 rounded-lg text-xs font-bold transition-all ${filterStatus === s ? 'bg-white text-slate-800 shadow-sm' : 'text-slate-500 hover:text-slate-700'}`}>{s}</button>
                                                ))}
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                {/* Main Table Grid - SHOW IN PDF */}
                                <div className="bg-white rounded-2xl border border-slate-200 shadow-sm overflow-hidden print-full-width">
                                    <div className="grid grid-cols-12 bg-slate-50/50 p-4 text-[10px] font-black text-slate-400 uppercase tracking-widest border-b border-slate-100">
                                        <div className="col-span-12 md:col-span-4">Pesquisa & Solicitante</div>
                                        <div className="hidden md:block md:col-span-1">Fluxo</div>
                                        <div className="hidden md:block md:col-span-2 text-center">Per√≠odo</div>
                                        <div className="hidden md:block md:col-span-3">Progresso / Respondentes</div>
                                        <div className="hidden md:block md:col-span-2 text-right px-4">Status</div>
                                    </div>
                                    <div className="divide-y divide-slate-100">
                                        {filteredResearches.length > 0 ? filteredResearches.map(r => {
                                            const progress = r.respondentesEsperados ? Math.min(100, (r.respondentesAtuais / r.respondentesEsperados) * 100) : 0;
                                            return (
                                                <div key={r.id} className="grid grid-cols-12 p-4 items-center hover:bg-slate-50 transition-colors group break-inside-avoid">
                                                    <div className="col-span-12 md:col-span-4 flex items-center gap-4">
                                                        <div className="flex gap-1 opacity-0 group-hover:opacity-100 transition-all no-print">
                                                            <button onClick={() => handleOpenResearchModal(r)} className="p-2 text-blue-400 hover:bg-blue-50 rounded-lg"><Icon name="edit-2" size={14} /></button>
                                                            <button onClick={() => handleDeleteResearch(r.id)} className="p-2 text-slate-300 hover:bg-red-50 rounded-lg"><Icon name="trash-2" size={14} /></button>
                                                        </div>
                                                        <div>
                                                            <div className="font-bold text-slate-800 group-hover:text-orange-600 transition-colors">{r.nome}</div>
                                                            <div className="text-xs text-slate-400 flex items-center gap-1"><Icon name="users" size={12} /> {r.solicitante}</div>
                                                        </div>
                                                    </div>
                                                    <div className="hidden md:block md:col-span-1">
                                                        <span className={`text-[10px] font-black px-2 py-0.5 rounded uppercase ${getFluxoColor(r.fluxo)}`}>{r.fluxo}</span>
                                                    </div>
                                                    <div className="hidden md:block md:col-span-2 text-center text-xs text-slate-500">
                                                        {r.dataInicio ? (
                                                            <span>
                                                                {new Date(r.dataInicio).toLocaleDateString('pt-BR')} <br/>
                                                                <span className="text-[10px] opacity-50 font-bold uppercase">at√© {new Date(r.dataFim).toLocaleDateString('pt-BR')}</span>
                                                            </span>
                                                        ) : '--/--/--'}
                                                    </div>
                                                    <div className="col-span-12 md:col-span-3 mt-4 md:mt-0">
                                                        <div className="flex justify-between text-[10px] font-bold mb-1">
                                                            <span className="text-slate-600">{r.respondentesAtuais?.toLocaleString()} captados</span>
                                                            <span className="text-slate-400">Meta: {r.respondentesEsperados?.toLocaleString()}</span>
                                                        </div>
                                                        <div className="h-1.5 bg-slate-100 rounded-full overflow-hidden border border-slate-200">
                                                            <div className={`h-full ${progress === 100 ? 'bg-emerald-500' : 'bg-orange-500'} transition-all`} style={{width: `${progress}%`}}></div>
                                                        </div>
                                                    </div>
                                                    <div className="col-span-12 md:col-span-2 mt-4 md:mt-0 flex items-center justify-end px-4">
                                                        <span className={`text-[10px] font-black px-2 py-1 rounded-full border ${getStatusStyle(r.status)}`}>{r.status}</span>
                                                    </div>
                                                </div>
                                            );
                                        }) : (
                                            <div className="p-12 text-center text-slate-400 italic">Nenhuma pesquisa encontrada no banco.</div>
                                        )}
                                    </div>
                                </div>
                            </div>
                        ) : (
                            /* WORKFLOW VIEW */
                            <div className="max-w-3xl mx-auto animate-fade-in print-full-width">
                                <div className="text-center mb-10 no-print">
                                    <h2 className="text-3xl font-black text-slate-800 tracking-tight">Fluxos Operacionais</h2>
                                    <p className="text-slate-500 mt-2">Guia de etapas para cada modalidade de pesquisa.</p>
                                    <button onClick={handleExportPDF} className="mt-4 text-xs font-bold text-orange-600 border border-orange-200 px-4 py-2 rounded-lg hover:bg-orange-50 transition-all">
                                        Exportar Manual de Fluxo (PDF)
                                    </button>
                                </div>
                                
                                <div className="flex bg-slate-200 p-1 rounded-2xl mb-12 shadow-inner no-print">
                                    {Object.keys(allFlows).map(f => (
                                        <button key={f} onClick={() => setActiveFlowTab(f)} className={`flex-1 py-3 rounded-xl text-sm font-black transition-all ${activeFlowTab === f ? 'bg-white text-orange-600 shadow-md' : 'text-slate-500 hover:text-slate-700'}`}>{f}</button>
                                    ))}
                                </div>

                                <div className="space-y-6 relative">
                                    <div className="hidden print:block text-center mb-8 border-b-2 border-slate-100 pb-4">
                                        <h3 className="text-xl font-black text-orange-600 uppercase tracking-widest">Fluxo: {activeFlowTab}</h3>
                                    </div>

                                    {allFlows[activeFlowTab]?.length > 0 ? allFlows[activeFlowTab].map((s, idx) => (
                                        <div key={s.id} className="flex gap-6 group break-inside-avoid">
                                            <div className="flex flex-col items-center">
                                                <div className="w-10 h-10 rounded-full border-2 border-orange-500 bg-white text-orange-600 flex items-center justify-center font-black text-sm group-hover:bg-orange-600 group-hover:text-white transition-all shadow-sm">{s.step}</div>
                                                {idx !== allFlows[activeFlowTab].length - 1 && <div className="w-0.5 h-full bg-slate-200 my-2"></div>}
                                            </div>
                                            <div className="flex-1 pb-8">
                                                <div className="bg-white p-5 rounded-2xl border border-slate-200 shadow-sm relative group-hover:shadow-md transition-all">
                                                    <div className="flex justify-between items-start">
                                                        <div className="flex items-center gap-4">
                                                            <div className="p-2 bg-orange-50 text-orange-600 rounded-lg"><Icon name={s.icon || 'clipboard-list'} /></div>
                                                            <div>
                                                                <h3 className="font-bold text-slate-800 leading-tight">{s.title}</h3>
                                                                <p className="text-sm text-slate-500 mt-1">{s.description}</p>
                                                            </div>
                                                        </div>
                                                        <div className="flex gap-1 opacity-0 group-hover:opacity-100 transition-all no-print">
                                                            <button onClick={() => handleOpenModal(s)} className="p-2 text-blue-500 hover:bg-blue-50 rounded-lg"><Icon name="edit-2" size={14} /></button>
                                                            <button onClick={() => handleDeleteStep(s.id)} className="p-2 text-red-500 hover:bg-red-50 rounded-lg"><Icon name="trash-2" size={14} /></button>
                                                        </div>
                                                    </div>
                                                    <div className="mt-4 pt-4 border-t border-slate-50 text-[10px] text-slate-400 italic flex items-center gap-1">
                                                        <Icon name="info" size={10} /> {s.detail || 'Sem observa√ß√µes t√©cnicas.'}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    )) : (
                                        <div className="text-center p-8 border-2 border-dashed border-slate-200 rounded-2xl text-slate-400 italic">Nenhuma etapa cadastrada.</div>
                                    )}
                                    <button onClick={() => handleOpenModal()} className="w-full py-4 border-2 border-dashed border-slate-300 rounded-2xl text-slate-400 font-bold hover:border-orange-500 hover:text-orange-600 transition-all flex items-center justify-center gap-2 active:scale-95 no-print">
                                        <Icon name="plus" /> Adicionar etapa em {activeFlowTab}
                                    </button>
                                </div>
                            </div>
                        )}
                    </main>

                    {/* MODAIS (NO-PRINT) */}
                    {isModalOpen && (
                        <div className="fixed inset-0 z-50 flex items-center justify-center bg-slate-900/40 backdrop-blur-sm p-4 no-print">
                            <div className="bg-white rounded-3xl w-full max-md shadow-2xl overflow-hidden animate-fade-in">
                                <div className="p-6 border-b bg-slate-50 flex justify-between items-center">
                                    <h3 className="font-black text-slate-800 tracking-tight">{editingStep ? 'Editar Etapa' : 'Criar Nova Etapa'}</h3>
                                    <button onClick={() => setIsModalOpen(false)} className="p-2 hover:bg-slate-200 rounded-full transition-colors"><Icon name="x" className="text-slate-400" /></button>
                                </div>
                                <div className="p-6 space-y-4">
                                    <div>
                                        <label className="text-[10px] font-black uppercase text-slate-400 mb-1 block">T√≠tulo da Etapa</label>
                                        <input type="text" className="w-full px-4 py-2 bg-slate-50 border rounded-xl outline-none focus:ring-2 focus:ring-orange-500 font-medium text-sm" value={formData.title} onChange={e => setFormData({...formData, title: e.target.value})} placeholder="Ex: Receber Briefing" />
                                    </div>
                                    <div>
                                        <label className="text-[10px] font-black uppercase text-slate-400 mb-1 block">Descri√ß√£o do Processo</label>
                                        <textarea className="w-full px-4 py-2 bg-slate-50 border rounded-xl outline-none focus:ring-2 focus:ring-orange-500 h-20 resize-none text-sm" value={formData.description} onChange={e => setFormData({...formData, description: e.target.value})} placeholder="O que deve ser feito?" />
                                    </div>
                                    <div>
                                        <label className="text-[10px] font-black uppercase text-slate-400 mb-1 block">Nota T√©cnica / Dica</label>
                                        <input type="text" className="w-full px-4 py-2 bg-slate-50 border rounded-xl outline-none focus:ring-2 focus:ring-orange-500 text-sm" value={formData.detail} onChange={e => setFormData({...formData, detail: e.target.value})} placeholder="Dica para o time..." />
                                    </div>
                                    <div>
                                        <label className="text-[10px] font-black uppercase text-slate-400 mb-1 block">√çcone Visual</label>
                                        <select className="w-full px-4 py-2 bg-slate-50 border rounded-xl outline-none font-medium text-sm" value={formData.icon} onChange={e => setFormData({...formData, icon: e.target.value})}>
                                            <option value="clipboard-list">üìã Briefing</option>
                                            <option value="file-edit">üìù Cria√ß√£o / Edi√ß√£o</option>
                                            <option value="send">üöÄ Veicula√ß√£o / Akross</option>
                                            <option value="zap">‚ö° Agilidade / On-demand</option>
                                            <option value="music">üéµ M√∫sica / Sonora</option>
                                            <option value="check-circle">‚úÖ Valida√ß√£o / Finalizado</option>
                                            <option value="bar-chart">üìä Relat√≥rios</option>
                                        </select>
                                    </div>
                                </div>
                                <div className="p-6 bg-slate-50 flex gap-2">
                                    <button onClick={() => setIsModalOpen(false)} className="flex-1 py-3 font-bold text-slate-500 hover:text-slate-800 transition-colors">Cancelar</button>
                                    <button onClick={handleSaveStep} className="flex-1 py-3 bg-orange-600 text-white rounded-xl font-bold shadow-lg shadow-orange-100 hover:bg-orange-700 transition-all">Salvar Etapa</button>
                                </div>
                            </div>
                        </div>
                    )}

                    {/* MODAL PESQUISA */}
                    {isResearchModalOpen && (
                        <div className="fixed inset-0 z-50 flex items-center justify-center bg-slate-900/40 backdrop-blur-sm p-4 no-print">
                            <div className="bg-white rounded-3xl w-full max-w-lg shadow-2xl overflow-hidden animate-fade-in">
                                <div className="p-6 border-b bg-slate-50 flex justify-between items-center">
                                    <h3 className="font-black text-slate-800 tracking-tight text-xl">{editingResearchId ? 'Editar Pesquisa' : 'Nova Pesquisa'}</h3>
                                    <button onClick={() => setIsResearchModalOpen(false)} className="p-2 hover:bg-slate-200 rounded-full transition-colors"><Icon name="x" className="text-slate-400" /></button>
                                </div>
                                <div className="p-6 grid grid-cols-2 gap-4">
                                    <div className="col-span-2">
                                        <label className="text-[10px] font-black uppercase text-slate-400 mb-1 block">Nome da Pesquisa</label>
                                        <input type="text" className="w-full px-4 py-2.5 bg-slate-50 border rounded-xl outline-none focus:ring-2 focus:ring-orange-500 font-medium text-sm" value={researchFormData.nome} onChange={e => setResearchFormData({...researchFormData, nome: e.target.value})} placeholder="Ex: Pesquisa de Clima" />
                                    </div>
                                    <div className="col-span-2">
                                        <label className="text-[10px] font-black uppercase text-slate-400 mb-1 block">Solicitante</label>
                                        <input type="text" className="w-full px-4 py-2.5 bg-slate-50 border rounded-xl outline-none focus:ring-2 focus:ring-orange-500 font-medium text-sm" value={researchFormData.solicitante} onChange={e => setResearchFormData({...researchFormData, solicitante: e.target.value})} placeholder="Nome/√Årea" />
                                    </div>
                                    <div>
                                        <label className="text-[10px] font-black uppercase text-slate-400 mb-1 block">In√≠cio Veicula√ß√£o</label>
                                        <input type="date" className="w-full px-4 py-2.5 bg-slate-50 border rounded-xl outline-none focus:ring-2 focus:ring-orange-500 font-medium text-sm" value={researchFormData.dataInicio} onChange={e => setResearchFormData({...researchFormData, dataInicio: e.target.value})} />
                                    </div>
                                    <div>
                                        <label className="text-[10px] font-black uppercase text-slate-400 mb-1 block">Fim Veicula√ß√£o</label>
                                        <input type="date" className="w-full px-4 py-2.5 bg-slate-50 border rounded-xl outline-none focus:ring-2 focus:ring-orange-500 font-medium text-sm" value={researchFormData.dataFim} onChange={e => setResearchFormData({...researchFormData, dataFim: e.target.value})} />
                                    </div>
                                    <div>
                                        <label className="text-[10px] font-black uppercase text-slate-400 mb-1 block">Respondentes Esperados</label>
                                        <input type="number" className="w-full px-4 py-2.5 bg-slate-50 border rounded-xl outline-none focus:ring-2 focus:ring-orange-500 font-medium text-sm" value={researchFormData.respondentesEsperados} onChange={e => setResearchFormData({...researchFormData, respondentesEsperados: e.target.value})} />
                                    </div>
                                    <div>
                                        <label className="text-[10px] font-black uppercase text-slate-400 mb-1 block">Respondentes Atuais</label>
                                        <input type="number" className="w-full px-4 py-2.5 bg-slate-50 border rounded-xl outline-none focus:ring-2 focus:ring-orange-500 font-medium text-sm" value={researchFormData.respondentesAtuais} onChange={e => setResearchFormData({...researchFormData, respondentesAtuais: e.target.value})} />
                                    </div>
                                    <div>
                                        <label className="text-[10px] font-black uppercase text-slate-400 mb-1 block">Fluxo</label>
                                        <select className="w-full px-4 py-2.5 bg-slate-50 border rounded-xl outline-none font-medium text-sm" value={researchFormData.fluxo} onChange={e => setResearchFormData({...researchFormData, fluxo: e.target.value})}>
                                            <option value="Sazonal">Sazonal</option>
                                            <option value="On-demand">On-demand</option>
                                            <option value="Sonora Trends">Sonora Trends</option>
                                        </select>
                                    </div>
                                    <div>
                                        <label className="text-[10px] font-black uppercase text-slate-400 mb-1 block">Status</label>
                                        <select className="w-full px-4 py-2.5 bg-slate-50 border rounded-xl outline-none font-medium text-sm" value={researchFormData.status} onChange={e => setResearchFormData({...researchFormData, status: e.target.value})}>
                                            <option value="Na Fila">Na Fila</option>
                                            <option value="No Ar">No Ar</option>
                                            <option value="Finalizada">Finalizada</option>
                                        </select>
                                    </div>
                                </div>
                                <div className="p-6 bg-slate-50 flex gap-2">
                                    <button onClick={() => setIsResearchModalOpen(false)} className="flex-1 py-3 font-bold text-slate-500 hover:text-slate-800 transition-colors">Cancelar</button>
                                    <button onClick={handleSaveResearch} className="flex-1 py-3 bg-orange-600 text-white rounded-xl font-bold shadow-lg shadow-orange-100 hover:bg-orange-700 transition-all flex items-center justify-center gap-2">
                                        <Icon name="save" size={18} /> Salvar Pesquisa
                                    </button>
                                </div>
                            </div>
                        </div>
                    )}
                </div>
            );
        };

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<App />);
    </script>
</body>
</html>
